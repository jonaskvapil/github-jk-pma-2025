<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag1Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment 1 — mini kalkulačka"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/etA"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tvHeader"
        android:layout_marginTop="12dp"
        android:hint="Číslo A"
        android:inputType="numberDecimal"
        android:background="#263238"
        android:textColor="#FFFFFF"
        android:textColorHint="#9AA0A6"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/etB"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/etA"
        android:layout_marginTop="8dp"
        android:hint="Číslo B"
        android:inputType="numberDecimal"
        android:background="#263238"
        android:textColor="#FFFFFF"
        android:textColorHint="#9AA0A6"
        android:padding="12dp"/>

    <Button
        android:id="@+id/btnSum"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Sečíst"
        android:layout_below="@id/etB"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSum"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        android:text="Výsledek: —"
        android:textColor="#FFFFFF"
        android:background="#1F2937"/>
</RelativeLayout>
