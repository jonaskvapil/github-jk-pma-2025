<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vítejte v Osobním Deníku"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:gravity="center"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/tvEntriesCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Počet záznamů: 0"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@color/gray_light"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvLastEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Poslední záznam: Žádný"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/ivHomeImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:contentDescription="Home image"/>

</LinearLayout>
